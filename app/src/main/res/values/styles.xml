<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="LoadTheme" parent="AppTheme">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Theme.Activity.White" parent="AppTheme">
        <item name="android:background">@color/gankWhite</item>
    </style>
    <style name="GankTabRadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="TextLink">
        <item name="android:textSize">@dimen/text_middle</item>
        <item name="android:autoLink">web</item>
    </style>
    <style name="TextAuth">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/gankGray</item>
    </style>
    <style name="TextAboutTip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:textColor">@color/gankBlank</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_common</item>
    </style>
    <style name="TextAboutDesc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_middle</item>
        <item name="android:textColor">@color/gankGray</item>
        <item name="android:autoLink">web</item>
    </style>

    <style name="ButtonMain" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_main</item>
        <item name="android:textColor">@color/gankWhite</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
